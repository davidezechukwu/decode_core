{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {        
		"declaration": true,
		"downlevelIteration": true,
		"emitDeclarationOnly": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"incremental": true,
		"lib": [ "es2020" ],
		"module": "none",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "es2020",
		"useUnknownInCatchVariables": false /*https://devblogs.microsoft.com/typescript/announcing-typescript-4-4/#use-unknown-catch-variables*/
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
